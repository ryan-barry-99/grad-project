<launch>

    <!-- Empty World -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="world_name" value="$(find notspot_gazebo)/launch/world/maze_final.world"/>
      <arg name="use_sim_time" value="true"/>
    </include>

    <!-- Robot -->
    <arg name="robot" default="$(find notspot_description)/urdf/notspot.urdf.xacro"/>
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg robot)" />
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -z 0.5 -model notspot_gazebo"/>
    <node name="robot_reset" pkg="notspot_gazebo" type="robot_reset.py" output="screen"/>


    <!-- Controllers -->
    <rosparam file="$(find notspot_gazebo)/config/controllers.yaml" command="load"/>
    <node name="controller_spawner" pkg="controller_manager" type="spawner" output="screen" ns="notspot_controller"
          args="FR1_joint FR2_joint FR3_joint
                FL1_joint FL2_joint FL3_joint
                RR1_joint RR2_joint RR3_joint
                RL1_joint RL2_joint RL3_joint"/>

    <!-- Robot State Publisher -->
    <node pkg="robot_state_publisher" type="robot_state_publisher"  name="robot_state_publisher" respawn="false" output="screen">
      <remap from="/joint_states" to="/notspot_gazebo/joint_states" />
      <param name="publish_frequency" type="double" value="10" />
    </node>

    <!-- Publish the positions for ice models and the robot -->
    <!-- <node name="ice_model_1_position" pkg="notspot_gazebo" type="model_position_subscriber.py" output="screen">
        <param name="model_name" value="ice_model"/>
    </node>

    <node name="ice_model_2_position" pkg="notspot_gazebo" type="model_position_subscriber.py" output="screen">
        <param name="model_name" value="ice_model_2"/>
    </node>

    <node name="ice_model_3_position" pkg="notspot_gazebo" type="model_position_subscriber.py" output="screen">
        <param name="model_name" value="ice_model_3"/>
    </node>

    <node name="ice_model_4_position" pkg="notspot_gazebo" type="model_position_subscriber.py" output="screen">
        <param name="model_name" value="ice_model_4"/>
    </node> -->

